# ProdigyHub TMF API Backend Environment Variables

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/prodigyhub
# For MongoDB Atlas, use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/prodigyhub?retryWrites=true&w=majority

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Connection Pool Settings (optional)
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2
DB_SERVER_SELECTION_TIMEOUT=10000
DB_SOCKET_TIMEOUT=0
DB_CONNECT_TIMEOUT=10000

# Application Settings
APP_NAME=ProdigyHub-TMF-API
BASE_URL=http://localhost:3000

# Development Settings
ENABLE_DB_MONITORING=true

# JWT Secret (if using authentication)
JWT_SECRET=your-super-secret-jwt-key-here

# CORS Settings (optional)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173