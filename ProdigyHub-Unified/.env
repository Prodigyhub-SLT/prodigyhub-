# ProdigyHub Unified TMF API Backend - Environment Configuration

# ==============================================
# SERVER CONFIGURATION
# ==============================================

# Port for the unified API server
PORT=3000

# Environment mode (development, production, test)
NODE_ENV=development

# Base URL for the API (used for href generation)
BASE_URL=http://localhost:3000

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080,*

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000        # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=1000       # Max requests per window per IP

# ==============================================
# TMF API SPECIFIC CONFIGURATION
# ==============================================

# TMF620 - Product Catalog Management
TMF620_VERSION=v5
TMF620_BASE_PATH=/productCatalogManagement/v5

# TMF637 - Product Inventory Management  
TMF637_VERSION=v5
TMF637_BASE_PATH=/tmf-api

# TMF679 - Product Offering Qualification
TMF679_VERSION=v5
TMF679_BASE_PATH=/productOfferingQualification/v5

# TMF622 - Product Ordering Management
TMF622_VERSION=v4
TMF622_BASE_PATH=/productOrderingManagement/v4

# TMF688 - Event Management
TMF688_VERSION=v4
TMF688_BASE_PATH=/tmf-api/event/v4

# TMF760 - Product Configuration Management
TMF760_VERSION=v5
TMF760_BASE_PATH=/tmf-api/productConfigurationManagement/v5

# ==============================================
# DATABASE CONFIGURATION (Optional)
# ==============================================

MONGODB_URI=mongodb+srv://prodigyhub-user:Prodigyhub@cluster0.htaz0ag.mongodb.net/prodigyhub?retryWrites=true&w=majority&appName=ProdigyHub
ENABLE_DATABASE=true

# Connection Pool Settings
DB_MAX_POOL_SIZE=5
DB_MIN_POOL_SIZE=2
DB_SERVER_SELECTION_TIMEOUT=10000
DB_SOCKET_TIMEOUT=0
DB_CONNECT_TIMEOUT=10000

# App Settings
NODE_ENV=development
APP_NAME=ProdigyHub-TMF-API
# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log format (combined, common, dev, short, tiny)
LOG_FORMAT=dev

# Enable/disable request logging
ENABLE_REQUEST_LOGGING=true

# ==============================================
# NOTIFICATION & EVENT CONFIGURATION
# ==============================================

# Event notification settings
ENABLE_EVENTS=true
EVENT_TIMEOUT=30000

# Hub callback timeout (milliseconds)
HUB_CALLBACK_TIMEOUT=10000

# Maximum number of retry attempts for notifications
MAX_NOTIFICATION_RETRIES=3

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Maximum request body size
MAX_REQUEST_SIZE=10mb

# Compression level (1-9, 6 is recommended)
COMPRESSION_LEVEL=6

# Enable/disable request compression
ENABLE_COMPRESSION=true

# ==============================================
# PAGINATION CONFIGURATION
# ==============================================

# Default pagination settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
DEFAULT_OFFSET=0

# ==============================================
# VALIDATION CONFIGURATION
# ==============================================

# Strict TMF compliance validation
STRICT_TMF_VALIDATION=true

# Enable/disable field selection validation
VALIDATE_FIELD_SELECTION=true

# Enable/disable request schema validation
ENABLE_SCHEMA_VALIDATION=true

# ==============================================
# INTEGRATION CONFIGURATION
# ==============================================

# External service timeouts
EXTERNAL_SERVICE_TIMEOUT=15000

# Webhook delivery timeout
WEBHOOK_TIMEOUT=10000

# Maximum concurrent webhook deliveries
MAX_CONCURRENT_WEBHOOKS=10

# ==============================================
# MONITORING & HEALTH CHECK CONFIGURATION
# ==============================================

# Health check interval (milliseconds)
HEALTH_CHECK_INTERVAL=60000

# Enable detailed health check responses
DETAILED_HEALTH_CHECK=true

# Memory usage threshold for health warnings (MB)
MEMORY_WARNING_THRESHOLD=512

# ==============================================
# CACHE CONFIGURATION (if implemented)
# ==============================================

# Enable/disable caching
ENABLE_CACHING=false

# Cache TTL (Time To Live) in seconds
CACHE_TTL=300

# Cache size limit
CACHE_SIZE_LIMIT=100

# ==============================================
# ERROR HANDLING CONFIGURATION
# ==============================================

# Include stack traces in error responses (development only)
INCLUDE_STACK_TRACE=true

# Enable error reporting to external services
ENABLE_ERROR_REPORTING=false

# Error reporting service URL
ERROR_REPORTING_URL=

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable/disable specific TMF APIs
ENABLE_TMF620=true
ENABLE_TMF637=true
ENABLE_TMF679=true
ENABLE_TMF622=true
ENABLE_TMF688=true
ENABLE_TMF760=true

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable mock data generation for testing
ENABLE_MOCK_DATA=true

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================

# Enable development middleware
ENABLE_DEV_MIDDLEWARE=true

# Hot reload configuration
ENABLE_HOT_RELOAD=true

# Debug mode
DEBUG_MODE=true

# Seed data on startup
SEED_DATA_ON_STARTUP=false

# ==============================================
# PRODUCTION CONFIGURATION
# ==============================================

# Trust proxy (for production behind load balancer)
TRUST_PROXY=false

# Cluster mode (number of worker processes)
CLUSTER_WORKERS=auto

# Graceful shutdown timeout
SHUTDOWN_TIMEOUT=10000

# ==============================================
# SSL/TLS CONFIGURATION (for HTTPS)
# ==============================================

# Enable HTTPS
ENABLE_HTTPS=false

# SSL certificate paths
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_CA_PATH=

# ==============================================
# API DOCUMENTATION CONFIGURATION
# ==============================================

# Enable Swagger/OpenAPI documentation
ENABLE_API_DOCS=true

# API documentation path
API_DOCS_PATH=/docs

# API documentation title
API_DOCS_TITLE=ProdigyHub TMF API Documentation

# ==============================================
# TESTING CONFIGURATION
# ==============================================

# Test environment settings
TEST_PORT=3001
TEST_TIMEOUT=10000
ENABLE_TEST_ROUTES=false

# Mock external services in test mode
MOCK_EXTERNAL_SERVICES=true

# ==============================================
# BACKUP & EXPORT CONFIGURATION
# ==============================================

# Enable automatic data exports
ENABLE_AUTO_EXPORT=false

# Export interval (milliseconds)
EXPORT_INTERVAL=86400000  # 24 hours

# Export destination path
EXPORT_PATH=./exports

# ==============================================
# CUSTOM CONFIGURATION
# ==============================================

# Custom configuration for specific deployments
CUSTOM_CONFIG_PATH=

# Extended features configuration
EXTENDED_FEATURES=

# Third-party integrations
THIRD_PARTY_INTEGRATIONS=

# ==============================================
# EXAMPLE USAGE
# ==============================================
# 
# For Development:
# NODE_ENV=development
# PORT=3000
# LOG_LEVEL=debug
# ENABLE_DEV_MIDDLEWARE=true
#
# For Production:
# NODE_ENV=production
# PORT=80
# LOG_LEVEL=warn
# TRUST_PROXY=true
# CLUSTER_WORKERS=4
#
# For Testing:
# NODE_ENV=test
# PORT=3001
# ENABLE_TEST_ROUTES=true
# MOCK_EXTERNAL_SERVICES=true
# ==============================================